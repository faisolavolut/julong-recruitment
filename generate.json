[
  // format data tablelist
  {
    "name": "mpr",
    "title": "MPR Overview",
    "url_root": "/d",
    "apix": {
      "port": "recruitment",
      "value": "data.data.mp_request_header",
      "path": "/api/mp-requests",
      "validate": "array"
    },
    "column": [
      ["id_applicant", "ID Applicant"],
      ["applicant_name", "Applicant Name"],
      ["gpa", "GPA"],
      ["major", "Major"],
      ["job_name", "Job Name"],
      ["job_experience", "Job Experience"],
      ["work_experience", "Work Experience (month)"],
      ["cv", "CV"],
      ["status_selection", "Status Selection", "status"]
    ]
  },
  // FORM NEW
  {
    "mode": "new",
    "name": "final-interview-result",
    "title": "Final Interview Result",
    "url_root": "/d/final-interview",
    "apix": {
      "port": "recruitment",
      "value": "data.data",
      "path": "/api/final-interview-result",
      "validate": "object"
    },
    "field": [
      ["name", "Name", "text"],
      ["job_position", "Job Position", "text"],
      ["id_applicant", "ID Applicant", "text"],
      ["penilaian_keseluruhan", "Penilaian Keseluruhan", "text"],
      [
        "hasil_interview",
        "Hasil Interview",
        "dropdown",
        {
          "apix": {
            "port": "recruitment",
            "value": "data.data",
            "path": "/api/interview-results",
            "keys": {
              "label": "name"
            },
            "validate": "dropdown"
          }
        }
      ],
      ["final_interview_date", "Final Interview Date", "date"],
      ["description", "Description", "textarea"]
    ]
  },

  // FORM EDIT
  {
    "mode": "edit",
    "name": "result-interview",
    "title": "Result Interview",
    "url_root": "/d/interview",
    "apix": {
      "port": "recruitment",
      "value": "data.data",
      "path": "/api/job-postings",
      "validate": "object"
    },
    "onload": {
      "apix": {
        "port": "recruitment",
        "value": "data.data",
        "path": "/api/job-postings",
        "validate": "object"
      }
    },
    // default tipe fieldnya text
    // jika tipe fieldnya richtext maka col-span-2

    "field": [
      ["name", "Name", "text"], //  disabled
      ["interview_date", "Interview Date", "date"], //  disabled
      ["job_name", "Job Name", "text"], //  disabled
      ["description", "Description", "textarea"], //  disabled
      ["interviewer_name", "Interviewer Name", "text"] //  disabled
    ]
  }
]
