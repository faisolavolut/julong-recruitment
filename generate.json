[
  // format data tablelist
  {
    "name": "project-recruitment",
    "title": "Project Recruitment",
    "url_root": "/d/project",
    "apix": {
      "port": "recruitment",
      "value": "data.data.job_postings",
      "path": "/api/job-postings",
      "validate": "array"
    },
    "column": [
      ["document_number", "Document No."],
      ["project_recruitment_header.name", "Project Name"],
      ["start_date", "Start Date", "date"],
      ["end_date", "End Date", "date"],
      ["status", "Status", "status"]
    ]
  },
  // FORM NEW
  {
    "mode": "new",
    "name": "project-recruitment",
    "title": "Project Recruitment",
    "url_root": "/d/project",
    "apix": {
      "port": "recruitment",
      "value": "data.data",
      "path": "/api/project-recruitment-headers",
      "validate": "object"
    },
    // default tipe fieldnya text
    // jika tipe fieldnya richtext maka col-span-2
    "field": [
      ["name", "Name", "text"],
      [
        "document_number", // disabled
        "Document Number",
        "text"
      ],
      ["document_date", "Document Date", "date"],
      ["start_date", "Start Date", "date"],
      ["end_date", "End Date", "date"],
      [
        "template_activity_id",
        "Template",
        "dropdown",
        {
          "apix": {
            "port": "recruitment",
            "value": "data.data.template_questions",
            "path": "/api/template-questions",
            "keys": {
              "label": "name"
            },
            "validate": "dropdown"
          }
        }
      ],
      [
        "recruitment_type",
        "Recruitment Type",
        "dropdown",
        {
          "apix": {
            "port": "recruitment",
            "value": "data.data",
            "path": "/api/recruitment-types",
            "keys": {
              "value": "value",
              "label": "value"
            },
            "validate": "dropdown"
          }
        }
      ],
      [
        "description", // col-span-2
        "Description",
        "textarea"
      ],
      [
        "status", // disabled
        "Status",
        "text"
      ]
    ]
  },

